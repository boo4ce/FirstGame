<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150px</item>
        <item name="android:textSize">50px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/myfont</item>
        <item name="android:background">@drawable/box</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">30px</item>
    </style>

    <style name="ball_unit">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>