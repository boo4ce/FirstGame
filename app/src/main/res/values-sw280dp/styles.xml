<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Box">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">41.25dp</item>
        <item name="android:textSize">18.75sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/box</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">7.5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/myfont</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ball_unit">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="back_icon">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">22.5dp</item>
    </style>

    <style name="text_view_only">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/myfont</item>
        <item name="android:clickable">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>